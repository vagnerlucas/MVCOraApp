@{
    ViewBag.Title = "Home Page";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
            <p>
                Exemplo de aplicação (CRUD) ASP.NET MVC utilizando EntityFramework 5, integrando com banco de dados Oracle
            </p>
        </div>
    </section>
}
